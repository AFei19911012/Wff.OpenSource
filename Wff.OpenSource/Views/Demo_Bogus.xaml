<UserControl x:Class="Wff.OpenSource.Views.Demo_Bogus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wff.OpenSource.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wff="http://wff-toolkits/controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UniformGrid Rows="2">
        <wff:DataGrid Name="dg1">
            <wff:DataGrid.Columns>
                <DataGridTextColumn Width="100"
                                    Binding="{Binding OrderId}"
                                    Header="OrderId" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding Item}"
                                    Header="Item" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding Quantity}"
                                    Header="Quantity" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding LotNumber}"
                                    Header="LotNumber" />
            </wff:DataGrid.Columns>
        </wff:DataGrid>
        <wff:DataGrid Name="dg2">
            <wff:DataGrid.Columns>
                <DataGridTextColumn Width="50"
                                    Binding="{Binding Id}"
                                    Header="Id" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding FirstName}"
                                    Header="FirstName" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding LastName}"
                                    Header="LastName" />
                <DataGridTextColumn Width="auto"
                                    Binding="{Binding Email}"
                                    Header="Email" />
                <DataGridTextColumn Width="auto"
                                    Binding="{Binding SomeGuid}"
                                    Header="SomeGuid" />
                <DataGridTextColumn Width="auto"
                                    Binding="{Binding SSN}"
                                    Header="SSN" />
            </wff:DataGrid.Columns>
        </wff:DataGrid>
    </UniformGrid>
</UserControl>