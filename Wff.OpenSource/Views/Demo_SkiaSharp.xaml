<UserControl x:Class="Wff.OpenSource.Views.Demo_SkiaSharp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wff.OpenSource.Views"
             xmlns:skia="http://wff-toolkits/skiasharp"
             xmlns:wff="http://wff-toolkits/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid Columns="2">
            <Image x:Name="img"
                   Margin="10" />
            <skia:SKElement PaintSurface="OnPaintSurface"
                            IgnorePixelScaling="True" />
        </UniformGrid>


        <WrapPanel Grid.Row="1"
                   Margin="10">
            <wff:Button Margin="10"
                        Padding="5"
                        FontSize="20"
                        Content="使用Skia绘制"
                        Click="OnDraw_Click" />
            <wff:Button Margin="10"
                        Padding="5"
                        FontSize="20"
                        Content="使用Skia拼图"
                        Click="OnMontage_Click" />
        </WrapPanel>

    </Grid>
</UserControl>